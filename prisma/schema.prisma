generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  username     String         @unique
  password     String
  name         String
  address      String
  contact      String
  Budget       Budget[]
  Expense      Expense[]
  Income       Income[]
  Notification Notification[]
  Payment      Payment[]
}

model Expense {
  id                String          @id @default(uuid())
  userId            String
  amount            Float
  date              DateTime
  description       String?
  expenseCategoryId String
  category          ExpenseCategory @relation(fields: [expenseCategoryId], references: [id])
  user              User            @relation(fields: [userId], references: [id])

  @@index([expenseCategoryId], map: "Expense_expenseCategoryId_fkey")
  @@index([userId], map: "Expense_userId_fkey")
}

model ExpenseCategory {
  id      String    @id @default(uuid())
  name    String
  Budget  Budget[]
  Expense Expense[]
}

model Budget {
  id                String          @id @default(uuid())
  userId            String
  amount            Float
  expenseCategoryId String
  category          ExpenseCategory @relation(fields: [expenseCategoryId], references: [id])
  user              User            @relation(fields: [userId], references: [id])

  @@index([expenseCategoryId], map: "Budget_expenseCategoryId_fkey")
  @@index([userId], map: "Budget_userId_fkey")
}

model Payment {
  id          String   @id @default(uuid())
  userId      String
  amount      Float
  date        DateTime
  description String?
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "Payment_userId_fkey")
}

model Income {
  id             String       @id @default(uuid())
  userId         String
  amount         Float
  date           DateTime
  description    String?
  incomeSourceId String
  source         IncomeSource @relation(fields: [incomeSourceId], references: [id])
  user           User         @relation(fields: [userId], references: [id])

  @@index([incomeSourceId], map: "Income_incomeSourceId_fkey")
  @@index([userId], map: "Income_userId_fkey")
}

model IncomeSource {
  id     String   @id @default(uuid())
  name   String
  Income Income[]
}

model Notification {
  id      String   @id @default(uuid())
  userId  String
  message String
  date    DateTime
  user    User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "Notification_userId_fkey")
}
